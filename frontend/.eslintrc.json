{
  "parser": "@babel/eslint-parser",
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "browser": true,
    "es2021": true
  },
  "root": true,
  "extends": ["eslint:recommended", "prettier", "plugin:react/recommended", "plugin:react/jsx-runtime", "plugin:testing-library/react"],
  "parserOptions": {
    "parser": "@babel/eslint-parser",
    "requireConfigFile": false, // <== ADD THIS
    "ecmaVersion": 2018, // Allows for the parsing of modern ECMAScript features
    "sourceType": "module" // Allows for the use of imports
  },
  "rules": {
    "semi": [2, "always"],
    "space-before-function-paren": [0, { "anonymous": "always", "named": "always" }],
    "camelcase": 0,
    "no-return-assign": 0,
    "quotes": ["error", "single"],
    "no-unused-vars": "off"
  }
}
